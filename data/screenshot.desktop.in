[Desktop Entry]
Type=Application
_Name=Screenshot
_Comment=Save images of the screen
Exec=screenshot
Icon=accessories-screenshot
Terminal=false
X-GNOME-Gettext-Domain=screenshot
Categories=GTK;GNOME;Utility;
_Keywords=Snapshot;Screenshot;
Actions=ScreenShot;WindowShot;AreaShot;AboutDialog;

[Desktop Action AboutDialog]
_Name=About Screenshot
Exec=screenshot --about

[Desktop Action ScreenShot]
_Name=Screenshot of the Whole Screen
Exec=screenshot --screen

[Desktop Action WindowShot]
_Name=Screenshot of the Current Window
Exec=screenshot --window

[Desktop Action AreaShot]
_Name=Screenshot of a Selected Area
Exec=screenshot --area
